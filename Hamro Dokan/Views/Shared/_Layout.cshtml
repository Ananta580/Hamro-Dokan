    <!-- /HEADER -->
    <!-- NAVIGATION -->
    <div id="navigation">
        <!-- container -->
        <div class="container-fluid">
            <div id="responsive-nav">

                <!-- menu nav -->
                <div class="menu-nav">
                    <span class="menu-header">Menu <i class="fa fa-bars"></i></span>
                    <ul class="menu-list">

                        <li><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li class="dropdown default-dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Product <i class="fa fa-caret-down"></i></a>
                            <ul class="custom-menu">
                                <li><a href="@Url.Action("Tshirt","Store")">TShirts</a></li>
                                <li><a href="@Url.Action("Pant","Store")">Pants</a></li>
                                <li><a href="@Url.Action("Mobile","Store")">Mobiles</a></li>
                                <li><a href="@Url.Action("Kurtha","Store")">Kurthas</a></li>
                            </ul>
                        </li>

