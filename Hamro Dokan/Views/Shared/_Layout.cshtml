                        @using Microsoft.AspNet.Identity
                        @if (User.Identity.GetUserId()!= null)
                        {
                            <li><a href="@Url.Action("Checkout", "Home")">Checkout</a></li>
                        }
                        <li><a href="@Url.Action("Index","Search")">Search</a></li>
